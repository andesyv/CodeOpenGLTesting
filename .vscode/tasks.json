{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc compile",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/c",
                "/EHsc",
                "/Zi",
                "/I",
                "${env:GLFW_HOME}/include",
                "/I",
                "${env:GLAD_HOME}/include",
                "/I",
                "${workspaceRoot}/glm",
                "${env:GLAD_HOME}/src/glad.c",
                "${workspaceRoot}/src/*.cpp"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "msvc link",
            "type": "shell",
            "command": "link.exe",
            "args": [
                "/DEBUG",
                "/OUT:app.exe",
                "*.obj",
                "${env:GLFW_HOME}/lib/msvc2019/glfw3dll.lib"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "msvc build",
            "type": "shell",
            "dependsOn": [
                "clean",
                "setup dll",
                "msvc compile",
                "msvc link"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "msvc build and run",
            "type": "shell",
            "dependsOn": [
                "msvc build",
                "run"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "MinGW compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-std=c++11",
                "-I${env:GLFW_HOME}/include",
                "-I${env:GLAD_HOME}/include",
                "-I${workspaceRoot}/glm",
                "${env:GLAD_HOME}/src/glad.c",
                "${workspaceRoot}/src/*.cpp"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "MinGW link",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "app.exe",
                "*.o",
                "-L${env:GLFW_HOME}/lib/mingw64",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "MinGW build",
            "dependsOn": [
                "clean",
                "MinGW compile",
                "MinGW link"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceRoot}/build/app.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "MinGW build and run",
            "dependsOn": [
                "MinGW Build",
                "run"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "windows": {
                "command": "rm",
                "args": [
                    "build/*",
                    "-Recurse"
                ]
            }
        },
        {
            "label": "setup dll",
            "type": "shell",
            "windows": {
                "command": "cp",
                "args": [
                    "${env:GLFW_HOME}/lib/msvc2019/glfw3.dll",
                    "build/glfw3.dll"
                ]
            }
        }
    ]
}